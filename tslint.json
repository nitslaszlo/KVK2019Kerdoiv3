{
    "defaultSeverity": "warning",
    "extends": [
      "tslint:recommended"
    ],
    "linterOptions": {
      "exclude": [
        "node_modules/**"
      ],
      "include": [
        "src/**"
      ]
    },
    "rules": {
      "quotemark": [
        true,
        "double"
      ],
      "indent": [
        true,
        "spaces",
        2
      ],
      "arrow-parens": [
        true,
        "ban-single-arg-parens"
      ],
      "trailing-comma": [
        true,
        {
          "multiline": "never",
          "singleline": "never"
        }
      ],
      "interface-name": false,
      "ordered-imports": false,
      "no-consecutive-blank-lines": false,
      "object-literal-sort-keys": false
    }
  }